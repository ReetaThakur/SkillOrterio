<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bookmar_shadow" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">


        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/relClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_ovl"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_10sdp"
                android:src="@drawable/ic_home_main_oval" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_120sdp"
                android:layout_marginRight="@dimen/_1sdp">


                <TextView
                    android:id="@+id/textCons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/ic_home_main_tag"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_6sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Construction"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"></TextView>

                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_bookmarkfill" />

                <TextView
                    android:id="@+id/textWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textCons"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/general_carpente_r"
                    android:textColor="#272F35"
                    android:textSize="@dimen/_13sdp"></TextView>

                <TextView
                    android:id="@+id/textMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textWork"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:text="$20 - $48 per hour"
                    android:textColor="#6A5856"
                    android:textSize="@dimen/_10sdp"></TextView>

            </RelativeLayout>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"
            android:indeterminateTintMode="src_atop"></ProgressBar>

        <ImageView
            android:id="@+id/imagePerson"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

    </RelativeLayout>


</layout>
