<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/common_action_bar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    >
                    <androidx.appcompat.widget.AppCompatEditText
                         android:background="@drawable/ic_rec_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_15sdp"
                      android:text="Robert Frost"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress|textVisiblePassword" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/first_name_"
                        android:textColor="@color/black" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:background="@drawable/ic_rec_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_15sdp"
                      android:text=" Pattinson"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress|textVisiblePassword" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/last_name_"
                        android:textColor="@color/black" />
                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/gender"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_27sdp"
                        android:background="@drawable/rec_ylo"
                        android:backgroundTint="@color/white"
                        android:layout_height="wrap_content" >
                        <RadioButton
                            android:id="@+id/bt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RadioButton" />
                        <RadioButton
                            android:id="@+id/bt2"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:text="RadioButton" />
                    </RadioGroup>
                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/ic_shape"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:padding="@dimen/_7sdp"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:background="@drawable/ic_rec_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_15sdp"
android:text=" Pattinson_robert@gmail.com"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress|textVisiblePassword" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/email"
                        android:textColor="@color/black" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:background="@drawable/ic_rec_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_15sdp"
android:text="october 27, 1998"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress|textVisiblePassword" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/date_of_birth_"
                        android:textColor="@color/black" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:background="@drawable/ic_rec_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_15sdp"
android:text="Windsor"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress|textVisiblePassword" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="City and State/Province"
                        android:textColor="@color/black" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    >
                    <androidx.appcompat.widget.AppCompatEditText
                        android:background="@drawable/ic_rec_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_15sdp"
android:text="Ontario"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress|textVisiblePassword" />


                </RelativeLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/ic_rectangle__done_button"
            android:layout_margin="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Save Profile"
                android:drawablePadding="@dimen/_5sdp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

    </LinearLayout>

</layout>