<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/common_action_bar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_15sdp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_First_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rec_line"
                        android:hint=""
                        android:textSize="@dimen/_12sdp"
                        android:textColorHint="#8FA1B5"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress|textVisiblePassword"
                        android:paddingLeft="@dimen/_15sdp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/first_name_"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_Last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rec_line"
                        android:hint=""
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress|textVisiblePassword"
                        android:paddingLeft="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="#8FA1B5"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/last_name_"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/gender"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_27sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rec_ylo"
                            android:backgroundTint="@color/white"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/bt1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/i_identify_as_female"
                                android:textSize="@dimen/_11sdp" />

                            <RadioButton
                                android:id="@+id/bt2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/i_don_t_identify_as_female"
                                android:textSize="@dimen/_11sdp" />
                        </RadioGroup>

                        <ImageView
                            android:id="@+id/ivInfo"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:padding="@dimen/_7sdp"
                            android:src="@drawable/ic_shape" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rec_line"
                        android:hint=""
                        android:textSize="@dimen/_12sdp"
                        android:textColorHint="#8FA1B5"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress|textVisiblePassword"
                        android:paddingLeft="@dimen/_15sdp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/email"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/school"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:orientation="horizontal">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/s1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_background"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/primary_school"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/s2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_background"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/secondary_school"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_year_select"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/tv_years"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rec_line"
                        android:clickable="false"
                        android:focusable="false"
                        android:hint=""
                        android:textSize="@dimen/_12sdp"
                        android:textColorHint="#8FA1B5"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress|textVisiblePassword"
                        android:paddingLeft="@dimen/_15sdp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/age_range"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_Windsor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rec_line"
                        android:imeOptions="actionNext"
                        android:textColorHint="#8FA1B5"
                        android:inputType="textEmailAddress|textVisiblePassword"
                        android:paddingLeft="@dimen/_15sdp"
                        android:text=""
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/city_and_state_province"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rec_line"
                        android:imeOptions="actionNext"
                        android:textColorHint="#8FA1B5"
                        android:inputType="textEmailAddress|textVisiblePassword"
                        android:paddingLeft="@dimen/_15sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black" />
                </RelativeLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/ic_rectangle__done_button"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saveProfile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/save_profile"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>


    </LinearLayout>

</layout>