<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/eventRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="onClickId"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:gravity="center"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">
                <ImageView
                    android:id="@+id/ivItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tmp_event"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_15sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Discovery day cornwell SDG"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/rec_ylo"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Young Womenâ€™s Initiatives"
                    android:textColor="#FF9F0A"
                    android:textSize="@dimen/_9sdp" />



            </LinearLayout>

            <ImageView
                android:id="@+id/ivCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:onClick="onClickId"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/event_calender"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_location"
                tools:ignore="ContentDescription" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_2sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="294 Albert Street,\nSuite 201 Ottawa, canda"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_time"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="@dimen/_190sdp"
                android:paddingLeft="@dimen/_2sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="May 15, 2021
02:00 pm "
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />


        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>