<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_25sdp">

        <TextView
            android:id="@+id/tv_newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="2dp"
            android:text="@string/temp_nd"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/tv_newsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="May 15, 2021  | 02:00 pm "
            android:textColor="@color/black_light"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/image_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxHeight="@dimen/_170sdp"
            android:minHeight="@dimen/_120sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_n2" />


       <!-- <TextView
            android:id="@+id/tv_newsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="@dimen/_4sdp"
            android:text="@string/tempd"
            android:textColor="@color/black_light"
            android:textSize="@dimen/_12sdp" />-->

        <WebView
            android:id="@+id/webView_newsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            tools:ignore="WebViewLayout" />

        <ImageView
            android:id="@+id/image_news2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:maxHeight="@dimen/_170sdp"
            android:minHeight="@dimen/_120sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_n2"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_newsDesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="@dimen/_4sdp"
            android:text="@string/tempd"
            android:textColor="@color/black_light"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />

    </LinearLayout>

</layout>