<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp">

        <include
            android:id="@+id/action_bar"
            layout="@layout/common_action_bar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F4FF"

            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/ic_rectangle_copy"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/ic_rectangle_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="1"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_notification" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8ssp"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="@string/notification"
                        android:textColor="@color/text_color_dark"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/iv_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="1"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_notification_on" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/l_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/ic_rectangle_copy"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/ic_rectangle_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="1"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_lock" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8ssp"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="@string/change_password"
                        android:textColor="@color/text_color_dark"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="1"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_notification_back" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/ic_rectangle_copy"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/ic_rectangle_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="1"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_web" />

                    </RelativeLayout>

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8ssp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/language"
                        android:textColor="@color/text_color_dark"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:background="@drawable/ic_language_background"
                        android:orientation="horizontal">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_setting_english"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:background="@drawable/ic_lang_rectangle"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:padding="@dimen/_4sdp"
                            android:singleLine="true"
                            android:text="@string/english"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_setting_french"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_lang_rectangle_transparent"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:padding="@dimen/_4sdp"
                            android:singleLine="true"
                            android:text="@string/fran_ais"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8sdp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_terms"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/ic_rectangle_copy"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/ic_rectangle_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="1"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_book" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8ssp"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="Terms of Service"
                        android:textColor="@color/text_color_dark"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="1"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_notification_back" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_help"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/ic_rectangle_copy"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/ic_rectangle_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="1"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_music" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8ssp"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="@string/help"
                        android:textColor="@color/text_color_dark"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="1"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_notification_back" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/ic_rectangle_copy"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/ic_rectangle_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="1"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_feedback_img" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8ssp"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="@string/feedback"
                        android:textColor="@color/text_color_dark"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="1"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_notification_back" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/ic_rectangle_copy"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/ic_rectangle_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="1"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_privacy_img" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8ssp"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="@string/privacy_policy"
                        android:textColor="@color/text_color_dark"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="1"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_notification_back" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_contactUS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/ic_rectangle_copy"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/ic_rectangle_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="1"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_contact_us" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8ssp"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="@string/contact_us"
                        android:textColor="@color/text_color_dark"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="1"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_notification_back" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_logout"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:backgroundTint="@color/buttonColor"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Logout"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
